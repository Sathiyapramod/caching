        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./",
        "outDir": "./build"
    },
    "include": ["src/**/*", "cli.ts"],
    "exclude": ["node_modules"]
}
